@model IEnumerable<Aplicacion_Web_Hospedaje.Models.Hospedaje>

@{
    ViewData["Title"] = "Explora Hospedajes";
}

<h2 class="bienvenidos-titulo">Explora nuestros hospedajes</h2>

<!-- Formulario de búsqueda -->
<form method="get" class="mb-4 text-center">
   <input type="text" name="searchString" value="@ViewData["CurrentFilter"]" placeholder="Buscar hospedaje..." class="form-control d-inline-block" style="width: 300px;" />
<button type="submit" class="btn btn-primary ms-2">Buscar</button>
</form>

<div class="container">
    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var hospedaje in Model)
        {
            <div class="col">
                <div class="card h-100 shadow rounded-4">
                    <img src="~/images/hotel-default.jpg" class="card-img-top" style="height:200px; object-fit:cover;" alt="@hospedaje.NombreHospedaje" />
                    <div class="card-body">
                        <h5 class="card-title">@hospedaje.NombreHospedaje</h5>
                        <p class="card-text"><strong>Tipo:</strong> @hospedaje.TipoHospedajeNavigation?.NombreTipoHospedaje</p>
                        <p class="card-text"><strong>Correo:</strong> @hospedaje.CorreoElectronico</p>
                        <p class="card-text"><strong>Ubicación:</strong> @hospedaje.ReferenciasGps</p>
                    </div>
                    <div class="card-footer bg-transparent d-flex justify-content-between">
                        <a href="@hospedaje.UrlSitioWeb" class="btn btn-sm btn-outline-primary" target="_blank">Sitio Web</a>
                        <div>
                            <a asp-action="Details" asp-route-id="@hospedaje.IdHospedaje" class="btn btn-sm btn-info">Ver</a>
                            <a asp-action="Edit" asp-route-id="@hospedaje.IdHospedaje" class="btn btn-sm btn-warning">Editar</a>
                            <a asp-action="Delete" asp-route-id="@hospedaje.IdHospedaje" class="btn btn-sm btn-danger">Borrar</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
.bienvenidos-titulo {
    font-family: 'Poppins', sans-serif;
    font-size: 2.5rem;
    font-weight: 900;
    color: #f77f00;
    -webkit-text-stroke: 1px black;
    text-shadow: 2px 2px 6px rgba(0,0,0,0.3);
    margin-bottom: 0.5rem;
    letter-spacing: 2px;
    text-align: center;
}
</style>
